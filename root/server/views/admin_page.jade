doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        
        title Admin Table | Innovating Beyond the Blueprint

        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC", crossorigin="anonymous")
        link(rel="stylesheet", type="text/css", href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css")
        link(rel="stylesheet", href="/css/index.css", type="text/css")
        
        //- script(type="text/javascript" src="dist/purify.min.js")
        script(src="https://cdn.jsdelivr.net/npm/dompurify@3.0.3/dist/purify.min.js")
        script(src="/jquery/jquery.min.js")
        script(type="text/javascript", src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js")

        script(src="/js/layout.js")
        script(src="/js/ajax_calls.js")
        script(src="/js/js_scripts.js")

        input#id_tag_enum(type="hidden", value=JSON.stringify(ID_TAG_ENUM))
        input#class_tag_enum(type="hidden", value=JSON.stringify(CLASS_TAG_ENUM)) 
        input#theme_name_tag_enum(type="hidden", value=JSON.stringify(THEME_NAME_TAG_ENUM)) 
        input#submission_fields_enum(type="hidden", value=JSON.stringify(SUBMISSION_FIELDS_ENUM)) 
        input#date_options_enum(type="hidden", value=JSON.stringify(DATE_OPTIONS_ENUM)) 
        input#time_options_enum(type="hidden", value=JSON.stringify(TIME_OPTIONS_ENUM)) 

    body.body_layout_template
        header 
            div.form_container
                    form.form
                        label -- View --            
                        select#dark_light(name="dark_light")
                            each theme_option in THEME_MODE
                                option(value=theme_option.VALUE)= theme_option.NAME 
            p.
                pretend there is a table here
        main 
            section.cards.formatting_block
                div.card_format
                    section.card
                        table(display="row-border", id="#contact_table")
                            thead Contacts 
                                tr 
                                    th First Name 
                                    th Last Name 
                                    th Email Address 
                                    th Short Message 
                    